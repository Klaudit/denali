{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "array-bracket-spacing": [ 2, "always" ],
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "consistent-return": 0,
    "eqeqeq": [ 2, "allow-null" ],
    "func-names": 0,
    "max-len": 0,
    "new-cap": 0,
    "no-cond-assign": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "padded-blocks": 0,
    "prefer-const": 0,
    "prefer-rest-params": 0,
    "space-before-function-paren": 0,
    "template-curly-spacing": [ 2, "always" ]
  }
}
